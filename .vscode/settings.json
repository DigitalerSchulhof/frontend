{
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.map, ${capture}.d.ts, ${capture}.d.ts.map",
    "tsconfig.json": "tsconfig.*.json, tsconfig.tsbuildinfo"
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "cSpell.words": [
    "arango",
    "Arango",
    "firstname",
    "Firstname",
    "lastname",
    "nbsp",
    "schoolyear",
    "schoolyears",
    "schulhof"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "colorize.languages": ["typescript"],
  "typescript.tsdk": "node_modules/.pnpm/typescript@5.1.0-beta/node_modules/typescript/lib"
}
