{
  "name": "@dsh/backend",
  "version": "1.0.0",
  "scripts": {
    "generate:types": "pnpm run generate:types:graphql",
    "generate:types:graphql": "graphql-codegen --config codegen.ts",
    "dev": "NODE_ENV=development nodemon --exec \"node --inspect=7000 -r dotenv/config -r ts-node/register src/index.ts\"",
    "dev-brk": "NODE_ENV=development nodemon --exec \"node --inspect-brk=7000 -r dotenv/config -r ts-node/register src/index.ts\""
  },
  "dependencies": {
    "@graphql-tools/load-files": "6.6.1",
    "@graphql-tools/merge": "8.3.14",
    "@graphql-tools/schema": "9.0.12",
    "arangojs": "8.1.0",
    "dotenv": "16.0.3",
    "graphql": "16.6.0",
    "graphql-yoga": "3.3.0",
    "vality": "6.3.1",
    "vality-env": "1.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@graphql-codegen/cli": "2.16.2",
    "@graphql-codegen/typescript": "2.8.7",
    "@graphql-codegen/typescript-resolvers": "2.7.11",
    "@swc/core": "1.3.25",
    "@types/node": "18.11.18",
    "nodemon": "2.0.20",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "resolvers",
      "../../packages/*/resolvers/**/*",
      "../../packages/*/backend/resolvers/**/*",
      "../.env"
    ],
    "ext": "ts,graphql",
    "ignore": [
      "**/*.d.ts",
      "resolvers/types.ts",
      "../../packages/*/resolvers/types.ts"
    ]
  }
}
