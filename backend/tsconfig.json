{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node", "jest"],

    "baseUrl": "./src",
    "paths": {
      "@caches/*": ["caches/*"],
      "@repositories/*": ["repositories/content/*"],
      "@services/*": ["services/content/*"],
      "@validators/*": ["validators/content/*"],
    }
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  }
}
