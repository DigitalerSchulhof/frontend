{
  "coverageReporters": ["lcov", "text"],
  "verbose": true,
  "transform": {
    "^.+\\.ts?$": "@swc/jest"
  },
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!**/__utils__/**/*"
  ],
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)",
    "!**/__utils__/**/*"
  ]
}
