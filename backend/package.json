{
  "name": "@dsh/backend",
  "private": true,
  "scripts": {
    "dev": "concurrently --names server --handle-input --default-input-target 0 \"pnpm:dev:server\" \"pnpm:dev:*(!server)\"",
    "dev:server": "NODE_ENV=development nodemon --exec \"node --inspect=7000 -r dotenv/config -r ts-node/register src/index.ts\"",
    "dev:graphql": "graphql-codegen --config codegen.ts --watch",
    "build": "concurrently \"pnpm:build:*(!server|:watch)\" && pnpm run build:server",
    "#build:server": "NODE_ENV=production tsc -p tsconfig.build.json && copyfiles",
    "build:graphql": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@envelop/core": "3.0.4",
    "@graphql-tools/load-files": "6.6.1",
    "@graphql-tools/merge": "8.3.14",
    "@graphql-tools/schema": "9.0.12",
    "@isaacs/ttlcache": "1.2.1",
    "arangojs": "8.1.0",
    "dataloader": "2.2.2",
    "dotenv": "16.0.3",
    "globby": "11",
    "graphql": "16.6.0",
    "graphql-yoga": "3.3.0",
    "ioredis": "5.3.1",
    "jsonwebtoken": "9.0.0",
    "koa": "2.14.1",
    "koa-compress": "5.1.0",
    "vality": "6.3.2",
    "vality-env": "1.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@graphql-codegen/cli": "2.16.2",
    "@graphql-codegen/typescript": "2.8.7",
    "@graphql-codegen/typescript-resolvers": "2.7.11",
    "@swc/core": "1.3.25",
    "@types/jest": "29.4.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/koa": "2.13.5",
    "@types/koa-compress": "4.0.3",
    "@types/node": "18.11.18",
    "jest": "29.4.3",
    "nodemon": "2.0.20",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ext": "ts,graphql",
    "ignore": [
      "src/resolvers/types.ts"
    ]
  }
}
