{
  "name": "@dsh/backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "dev": "concurrently --names server --handle-input --default-input-target 0 \"pnpm:dev:server\" \"pnpm:dev:*(!server)\"",
    "dev:server": "NODE_ENV=development nodemon --exec \"node --inspect=7000 -r dotenv/config -r ts-node/register src/index.ts\"",
    "dev:graphql": "graphql-codegen --config codegen.ts --watch",
    "build": "concurrently \"pnpm:build:*(!server|:watch)\" && pnpm run build:server",
    "#build:server": "NODE_ENV=production tsc -p tsconfig.build.json && copyfiles",
    "build:graphql": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@envelop/core": "3.0.6",
    "@graphql-tools/load-files": "6.6.1",
    "@graphql-tools/merge": "8.4.0",
    "@graphql-tools/schema": "9.0.17",
    "@isaacs/ttlcache": "1.2.1",
    "arangojs": "8.1.0",
    "dataloader": "2.2.2",
    "dotenv": "16.0.3",
    "globby": "11",
    "graphql": "16.6.0",
    "graphql-yoga": "3.7.3",
    "ioredis": "5.3.1",
    "jsonwebtoken": "9.0.0",
    "koa": "2.14.1",
    "koa-compress": "5.1.0",
    "vality": "6.3.2",
    "vality-env": "1.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/typescript": "3.0.2",
    "@graphql-codegen/typescript-resolvers": "3.1.1",
    "@swc/core": "1.3.41",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.5.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/koa": "2.13.5",
    "@types/koa-compress": "4.0.3",
    "@types/node": "18.15.3",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "nodemon": "2.0.21",
    "prettier": "2.8.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "5.0.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "globby"
      ]
    }
  }
}
