{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],

    "baseUrl": "./src",
    "paths": {
      "@caches/*": ["caches/*"],
      "@config": ["config"],
      "@repositories/*": ["repositories/*"],
      "@loaders/*": ["loaders/*"],
      "@services/*": ["services/*"],
      "@utils": ["utils"]
    }
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  }
}
