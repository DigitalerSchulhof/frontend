{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@i18n": ["./src/i18n"],
      "@i18n/*": ["./src/i18n/*"],
      "@UI": ["./src/ui"],
      "@UI/*": ["./src/ui/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/**", "next/**/*"]
}
