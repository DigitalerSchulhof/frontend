{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "#/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js"
  ],
  "exclude": [
    "**/node_modules/*",
  ]
}
